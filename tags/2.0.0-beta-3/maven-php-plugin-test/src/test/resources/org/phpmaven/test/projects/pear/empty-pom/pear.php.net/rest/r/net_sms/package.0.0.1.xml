<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<package version="1.0">
  <name>Net_SMS</name>
  <summary>SMS functionality.</summary>
  <description>This package provides SMS functionality and access to SMS gateways.</description>
  <maintainers>
    <maintainer>
      <user>mdjukic</user>
      <name>Marko Djukic</name>
      <email>mdjukic@horde.org</email>
      <role>lead</role>
    </maintainer>
  </maintainers>
  <release>
    <version>0.0.1</version>
    <date>2004-03-15</date>
    <license>LGPL</license>
    <state>beta</state>
    <notes>Initial release as a PEAR package</notes>
    <deps>
      <dep type="php" rel="ge" version="4.2.0"/>
      <dep type="ext" rel="has">gettext</dep>
      <dep type="pkg" rel="has" optional="yes">HTTP_Request</dep>
      <dep type="pkg" rel="has" optional="yes">Mail</dep>
    </deps>
    <provides type="class" name="SMS" />
    <filelist>
      <file role="php" baseinstalldir="/Net" name="SMS.php"/>
      <file role="php" baseinstalldir="/Net" name="SMS/clickatell_http.php"/>
      <file role="php" baseinstalldir="/Net" name="SMS/sms2email_http.php"/>
      <file role="php" baseinstalldir="/Net" name="SMS/vodafoneitaly_smtp.php"/>
    </filelist>
  </release>
  <changelog>
    <release>
      <version>0.0.1</version>
      <date>2004-03-15</date>
      <state>beta</state>
      <notes>Initial release as a PEAR package
</notes>
    </release>
  </changelog>
</package>

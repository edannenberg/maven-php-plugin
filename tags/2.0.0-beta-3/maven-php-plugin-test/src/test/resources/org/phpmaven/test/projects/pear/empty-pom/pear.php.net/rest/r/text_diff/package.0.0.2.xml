<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<package version="1.0">
  <name>Text_Diff</name>
  <summary>Engine for performing and rendering text diffs</summary>
  <description>This package provides a text-based diff engine and renderers for multiple diff output formats.</description>
  <maintainers>
    <maintainer>
      <user>chagenbu</user>
      <name>Chuck Hagenbuch</name>
      <email>chuck@horde.org</email>
      <role>lead</role>
    </maintainer>
    <maintainer>
      <user>jon</user>
      <name>Jon Parise</name>
      <email>jon@horde.org</email>
      <role>lead</role>
    </maintainer>
    <maintainer>
      <user>pmjones</user>
      <name>Paul M Jones</name>
      <email>pmjones@memphis.edu</email>
      <role>lead</role>
    </maintainer>
    <maintainer>
      <user>yunosh</user>
      <name>Jan Schneider</name>
      <email>jan@horde.org</email>
      <role>lead</role>
    </maintainer>
  </maintainers>
  <release>
    <version>0.0.2</version>
    <date>2004-03-16</date>
    <license>LGPL</license>
    <state>alpha</state>
    <notes>Added xdiff support</notes>
    <deps>
      <dep type="php" rel="ge" version="4.2.0+"/>
      <dep type="ext" rel="has" optional="yes">xdiff</dep>
    </deps>
    <provides type="class" name="Text_Diff" />
    <provides type="class" name="Text_Diff3" />
    <provides type="class" name="Text_MappedDiff" />
    <provides type="class" name="Text_Diff_Renderer" />
    <filelist>
      <file role="php" baseinstalldir="/Text" name="Diff.php"/>
      <file role="php" baseinstalldir="/Text" name="Diff3.php"/>
      <file role="php" baseinstalldir="/Text" name="Diff/Renderer.php"/>
      <file role="php" baseinstalldir="/Text" name="Diff/Renderer/unified.php"/>
      <file role="doc" baseinstalldir="/Text" name="docs/examples/diff.php"/>
      <file role="doc" baseinstalldir="/Text" name="docs/examples/1.txt"/>
      <file role="doc" baseinstalldir="/Text" name="docs/examples/2.txt"/>
      <file role="test" baseinstalldir="/Text" name="tests/1.txt"/>
      <file role="test" baseinstalldir="/Text" name="tests/2.txt"/>
      <file role="test" baseinstalldir="/Text" name="tests/diff.phpt"/>
      <file role="test" baseinstalldir="/Text" name="tests/unified.phpt"/>
    </filelist>
  </release>
  <changelog>
    <release>
      <version>0.0.2</version>
      <date>2004-03-16</date>
      <state>alpha</state>
      <notes>Added optional xdiff support
</notes>
    </release>
    <release>
      <version>0.0.1</version>
      <date>2004-01-09</date>
      <state>alpha</state>
      <notes>Initial package release
</notes>
    </release>
  </changelog>
</package>

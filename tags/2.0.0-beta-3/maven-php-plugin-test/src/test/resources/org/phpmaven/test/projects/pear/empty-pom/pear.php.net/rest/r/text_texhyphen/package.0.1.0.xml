<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<package version="1.0">
  <name>Text_TeXHyphen</name>
  <summary>Implements the TeX hyphenation algotithm.</summary>
  <description>This package hyphenates words by applying the TeX algorithm for automated hyphenation.</description>
  <maintainers>
    <maintainer>
      <user>ohrmann</user>
      <name>Stefan Ohrmann</name>
      <email>bshell@gmx.net</email>
      <role>lead</role>
    </maintainer>
  </maintainers>
  <release>
    <version>0.1.0</version>
    <date>2004-06-15</date>
    <license>PHP</license>
    <state>alpha</state>
    <notes>Initial release.</notes>
    <filelist>
      <file role="php" name="Text/TeXHyphen.php"/>
      <file role="php" name="Text/TeXHyphen\Pattern.php"/>
      <file role="php" name="Text/TeXHyphen\PatternDB.php"/>
      <file role="php" name="Text/TeXHyphen\PatternDB\objecthash.php"/>
      <file role="php" name="Text/TeXHyphen\PatternValidator.php"/>
      <file role="php" name="Text/TeXHyphen\WordCache.php"/>
      <file role="php" name="Text/TeXHyphen\WordCache\simplehash.php"/>
      <file role="test" install-as="TeXHyphen_PatternDB_ObjectHash_TestCase.php" name="tests\Text_TeXHyphen\TeXHyphen_PatternDB_ObjectHash_TestCase.php"/>
      <file role="test" install-as="TeXHyphen_Pattern_TestCase.php" name="tests\Text_TeXHyphen\TeXHyphen_Pattern_TestCase.php"/>
      <file role="data" install-as="original/dehyphn.tex" name="data\Text_TeXHyphen\original\dehyphn.tex"/>
      <file role="data" install-as="original/hyphen.tex" name="data\Text_TeXHyphen\original\hyphen.tex"/>
      <file role="data" install-as="original/ukhyph.tex" name="data\Text_TeXHyphen\original\ukhyph.tex"/>
      <file role="data" install-as="de_pattern.txt" name="data\Text_TeXHyphen\de_pattern.txt"/>
      <file role="data" install-as="en-US_pattern.txt" name="data\Text_TeXHyphen\en-US_pattern.txt"/>
      <file role="data" install-as="en-US_exceptions.txt" name="data\Text_TeXHyphen\en-US_exceptions.txt"/>
      <file role="data" install-as="en-GB_pattern.txt" name="data\Text_TeXHyphen\en-GB_pattern.txt"/>
      <file role="data" install-as="en-GB_exceptions.txt" name="data\Text_TeXHyphen\en-GB_exceptions.txt"/>
      <file role="doc" install-as="examples/plain.php" name="docs\Text_TeXHyphen\examples\plain.php"/>
      <file role="doc" install-as="examples/en_sample.txt" name="docs\Text_TeXHyphen\examples\en_sample.txt"/>
      <file role="doc" install-as="examples/form.php" name="docs\Text_TeXHyphen\examples\form.php"/>
    </filelist>
  </release>
</package>
